@page
@model EditModel
@{
    ViewData["Title"] = "Edit";
}

<br />
<h2>Edit Event</h2>
<br />
<hr />
<div style="border:1px solid #bbb9b9; border-radius:5px;">
    <form method="post" enctype="multipart/form-data">
        <div class="form-border row" style="padding-left:50px; padding-top:30px;">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Event.id" />
            <div class="col-sm-8">
                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-4">
                            <label asp-for="Event.Name"></label>
                        </div>
                        <div class="col-sm-8">
                            <input asp-for="Event.Name" class="form-control" />
                        </div>
                    </div>
                    <span asp-validation-for="Event.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-4">
                            <label asp-for="Event.Date"></label>
                        </div>
                        <div class="col-sm-8">
                            <input type="date" data-date="" data-data-format="DD MM YYYY" asp-for="Event.Date" class="form-control" />
                        </div>
                    </div>
                    <span asp-validation-for="Event.Date" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-4">
                            <label asp-for="Event.Place"></label>
                        </div>
                        <div class="col-sm-8">
                            <input asp-for="Event.Place" class="form-control" />
                        </div>
                    </div>
                    <span asp-validation-for="Event.Place" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-4">
                            <label asp-for="Event.Descryption"></label>
                        </div>
                        <div class="col-sm-8">
                            <textarea style="height:150px;" asp-for="Event.Descryption" class="form-control"></textarea>
                        </div>
                    </div>
                    <span asp-validation-for="Event.Descryption" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-4">
                            <label asp-for="Event.Tickets"></label>
                        </div>
                        <div class="col-sm-8">
                            <input asp-for="Event.Tickets" class="form-control" />
                        </div>
                    </div>
                    <span asp-validation-for="Event.Tickets" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-4">
                            <label asp-for="Event.Image"></label>
                        </div>
                        <div class="col-sm-8">
                            <input type="file" name="files" multiple class="form-control" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-3 col-sm-offset-1">
                 <img src="@Model.Event.Image" width="100%" style="border-radius:5px; border:1px solid #bbb9b9;" />
            </div>
            <br />
            <div class="form-group row col-sm-12">
                <input type="submit" value="Update" class="btn btn-primary btn-sm" />
                <a asp-page="EventList" class="btn btn-success btn-sm">Back to list</a>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}