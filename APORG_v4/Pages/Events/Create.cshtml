@page
@model CreateModel
@{
    ViewData["Title"] = "Create Event";
}

<br />
<h2>Create Event</h2>
<br />
<hr />
<div class="text-right">
    <form method="post" enctype="multipart/form-data">
        <div class="row" style="padding-left:10px; padding-top:10px;">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @*Main Data*@
            <div class="col-sm-6">
                <h2 class="text-left">Main Data</h2>
                <div style="border:1px solid #000000; border-radius:5px; padding:5px; margin-left:-10px; background: rgba(255, 255, 255, 0.3)">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-4">
                                <label asp-for="Event.Name"></label>
                            </div>
                            <div class="col-sm-8">
                                <input asp-for="Event.Name" class="form-control" />
                            </div>
                        </div>
                        <span asp-validation-for="Event.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-4">
                                <label asp-for="Event.Date"></label>
                            </div>
                            <div class="col-sm-8">
                                <input type="date" data-date="" data-data-format="DD MM YYYY" asp-for="Event.Date" class="form-control" />
                            </div>
                        </div>
                        <span asp-validation-for="Event.Date" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-4">
                                <label asp-for="Event.Place"></label>
                            </div>
                            <div class="col-sm-8">
                                <input asp-for="Event.Place" class="form-control" />
                            </div>
                        </div>
                        <span asp-validation-for="Event.Place" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-4">
                                <label asp-for="Event.Descryption"></label>
                            </div>
                            <div class="col-sm-8">
                                <textarea style="height:150px;" asp-for="Event.Descryption" class="form-control"></textarea>
                            </div>
                        </div>
                        <span asp-validation-for="Event.Descryption" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-4">
                                <label asp-for="Event.Tickets"></label>
                            </div>
                            <div class="col-sm-8">
                                <textarea style="height:150px;" asp-for="Event.Tickets" class="form-control"></textarea>
                            </div>
                        </div>
                        <span asp-validation-for="Event.Tickets" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-4">
                        <label asp-for="Event.Image"></label>
                    </div>
                    <div class="col-sm-8">
                        <input type="file" name="files" multiple class="form-control" />
                    </div>
                </div>
            </div>
            @*Buttons*@
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary btn-sm" />
                <a asp-page="EventList" class="btn btn-success btn-sm">Back to list</a>
            </div>
        </div>

    </form>
</div>
@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
