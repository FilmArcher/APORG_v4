<script>
    function StageAction() {
        var stageBox = document.getElementById("stagebox");
        var stageBlock = document.getElementById("StageResult");
        if (stageBox.checked == true) {
            stageBlock.style.display = "block";
        } else {
            stageBlock.style.display = "none";
        }
    }
    function BackstageAction() {
        var BackstageBox = document.getElementById("backstagebox");
        var BackstageBlock = document.getElementById("BackstageResult");
        if (BackstageBox.checked == true) {
            BackstageBlock.style.display = "block";
        } else {
            BackstageBlock.style.display = "none";
        }
    }
