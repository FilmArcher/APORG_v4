@page "{id:int?}/{handler?}"
@model OrganizerListModel

@{
}
<br />
<h2>Object List Page</h2>
<br />

@if (Model.Message != null)
{
    <div class="alert alert-info alert-dismissable" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="close">
            <span aria-hidden="true">&times;</span>
        </button>
        @Model.Message
    </div>
}

    <a asp-page="Create" type="button" class="btn btn-primary">
        <span class="glyphicon glyphicon-plus"></span>
        &nbsp; Create New Organizer
    </a>

@if (Model.Organizers.Count() > 0)
{

    <form method="post">
        <div>
            <br />
            <table id="table_id" class="display" style="background: rgba(255, 255, 255, 0.4)">
                <thead>
                    <tr>
                        <th>Image</th>
                        <th>Name</th>
                        <th>Country</th>
                        <th>Town</th>
                        <th>Region</th>
                        <th>Modify</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model.Organizers)
                    {
                        <tr>
                            <td height="150px" width="200px"><img src="@Html.DisplayFor(m => item.Image)" width="100%" height="100%" /> </td>
                            <td style="font-size:x-large"><b>@Html.DisplayFor(m => item.Name)</b></td>
                            <td>@Html.DisplayFor(m => item.Country)</td>
                            <td>@Html.DisplayFor(m => item.Town)</td>
                            <td>@Html.DisplayFor(m => item.Region)</td>
                            <td align="center">@Html.Partial("_TableButtonsPartial", new Model.IndividualButtonPartial { Id = item.Id })</td>
                        </tr>


                    }
                </tbody>
            </table>


        </div>
    </form>
}
else
{
    <p>No Objects found</p>
}
