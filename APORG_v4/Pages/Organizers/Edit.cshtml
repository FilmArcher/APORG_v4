@page
@model EditModel
@{
    ViewData["Title"] = "Edit";
}

<br />
<h2>Edit Organizer</h2>
<br />
<hr />
<div style="border:1px solid #bbb9b9; border-radius:5px;">
    <form method="post" enctype="multipart/form-data">
        <div class="form-border row" style="padding-left:50px; padding-top:30px;">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Organizer.Id" />
            <div class="col-sm-8">
                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-4">
                            <label asp-for="Organizer.Name"></label>
                        </div>
                        <div class="col-sm-8">
                            <input asp-for="Organizer.Name" class="form-control" />
                        </div>
                    </div>
                    <span asp-validation-for="Organizer.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-4">
                            <label asp-for="Organizer.Country"></label>
                        </div>
                        <div class="col-sm-8">
                            <input asp-for="Organizer.Country" class="form-control" />
                        </div>
                    </div>
                    <span asp-validation-for="Organizer.Country" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-4">
                            <label asp-for="Organizer.Region"></label>
                        </div>
                        <div class="col-sm-8">
                            <input asp-for="Organizer.Region" class="form-control" />
                        </div>
                    </div>
                    <span asp-validation-for="Organizer.Region" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-4">
                            <label asp-for="Organizer.Town"></label>
                        </div>
                        <div class="col-sm-8">
                            <input asp-for="Organizer.Town" class="form-control" />
                        </div>
                    </div>
                    <span asp-validation-for="Organizer.Town" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-4">
                            <label asp-for="Organizer.Description"></label>
                        </div>
                        <div class="col-sm-8">
                            <textarea style="height:150px;" asp-for="Organizer.Description" class="form-control"></textarea>
                        </div>
                    </div>
                    <span asp-validation-for="Organizer.Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-4">
                            <label asp-for="Organizer.Contact"></label>
                        </div>
                        <div class="col-sm-8">
                            <input asp-for="Organizer.Contact" class="form-control" />
                        </div>
                    </div>
                    <span asp-validation-for="Organizer.Contact" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-4">
                            <label asp-for="Organizer.Image"></label>
                        </div>
                        <div class="col-sm-8">
                            <input type="file" name="files" multiple class="form-control" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-3 col-sm-offset-1">
                <img src="@Model.Organizer.Image" width="100%" style="border-radius:5px; border:1px solid #bbb9b9;" />
            </div>

            <br />
            <div class="form-group row col-sm-12">
                <input type="submit" value="Update" class="btn btn-primary btn-sm" />
                <a asp-page="OrganizerList" class="btn btn-success btn-sm">Back to list</a>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}