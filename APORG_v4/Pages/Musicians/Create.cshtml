@page
@model APORG_v4.Pages.Musicians.CreateModel
@{
    ViewData["Title"] = "Create Musician";
}

<h2>Create Musician</h2>
<hr />
<div class="text-right">
    <form method="post" enctype="multipart/form-data">
        <div class="row" style="padding-left:10px; padding-top:10px;">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-sm-6">
                <h2 class="text-left">Main Data</h2>
                <div style="border:1px solid #000000; border-radius:5px; padding:5px; margin-left:-10px; background: rgba(255, 255, 255, 0.3)">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-4">
                                <label asp-for="Musician.Name"></label>
                            </div>
                            <div class="col-sm-8">
                                <input asp-for="Musician.Name" class="form-control" />
                            </div>
                        </div>
                        <span asp-validation-for="Musician.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-4">
                                <label asp-for="Musician.Genre"></label>
                            </div>
                            <div class="col-sm-8">
                                <input asp-for="Musician.Genre" class="form-control" />
                            </div>
                        </div>
                        <span asp-validation-for="Musician.Genre" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-4">
                                <label asp-for="Musician.Country"></label>
                            </div>
                            <div class="col-sm-8">
                                <input asp-for="Musician.Country" class="form-control" />
                            </div>
                        </div>
                        <span asp-validation-for="Musician.Country" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-4">
                                <label asp-for="Musician.Region"></label>
                            </div>
                            <div class="col-sm-8">
                                <input asp-for="Musician.Region" class="form-control" />
                            </div>
                        </div>
                        <span asp-validation-for="Musician.Region" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-4">
                                <label asp-for="Musician.Town"></label>
                            </div>
                            <div class="col-sm-8">
                                <input asp-for="Musician.Town" class="form-control" />
                            </div>
                        </div>
                        <span asp-validation-for="Musician.Town" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-4">
                                <label asp-for="Musician.Description"></label>
                            </div>
                            <div class="col-sm-8">
                                <textarea style="height:150px;" asp-for="Musician.Description" class="form-control"></textarea>
                            </div>
                        </div>
                        <span asp-validation-for="Musician.Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-4">
                                <label asp-for="Musician.Biography"></label>
                            </div>
                            <div class="col-sm-8">
                                <input asp-for="Musician.Biography" class="form-control" />
                            </div>
                        </div>
                        <span asp-validation-for="Musician.Biography" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-4">
                                <label asp-for="Musician.First_name_manager"></label>
                            </div>
                            <div class="col-sm-8">
                                <input asp-for="Musician.First_name_manager" class="form-control" />
                            </div>
                        </div>
                        <span asp-validation-for="Musician.First_name_manager" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-4">
                                <label asp-for="Musician.Last_name_manager"></label>
                            </div>
                            <div class="col-sm-8">
                                <input asp-for="Musician.Last_name_manager" class="form-control" />
                            </div>
                        </div>
                        <span asp-validation-for="Musician.Last_name_manager" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-4">
                                <label asp-for="Musician.Manager_contact"></label>
                            </div>
                            <div class="col-sm-8">
                                <input asp-for="Musician.Manager_contact" class="form-control" />
                            </div>
                        </div>
                        <span asp-validation-for="Musician.Manager_contact" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-4">
                                <label asp-for="Musician.Creation_date"></label>
                            </div>
                            <div class="col-sm-8">
                                <input type="date" data-date="" data-data-format="DD MM YYYY" asp-for="Musician.Creation_date" class="form-control" />
                            </div>
                        </div>
                        <span asp-validation-for="Musician.Creation_date" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-4">
                                <label asp-for="Musician.Merch"></label>
                            </div>
                            <div class="col-sm-8">
                                <input asp-for="Musician.Merch" class="form-control" />
                            </div>
                        </div>
                        <span asp-validation-for="Musician.Merch" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-4">
                                <label asp-for="Musician.Discography"></label>
                            </div>
                            <div class="col-sm-8">
                                <input asp-for="Musician.Discography" class="form-control" />
                            </div>
                        </div>
                        <span asp-validation-for="Musician.Discography" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-4">
                        <label asp-for="Musician.Image"></label>
                    </div>
                    <div class="col-sm-8">
                        <input type="file" name="files" multiple class="form-control" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary btn-sm" />
                <a asp-page="MusicianList" class="btn btn-success btn-sm">Back to list</a>
            </div>
        </div>

    </form>

    @section Scripts{
        @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</div>
