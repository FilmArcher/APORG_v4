@page
@model DetailsModel
@{
    ViewData["Title"] = "Details";
}

<br />
<h2>Details Musician</h2>
<br />
<hr />
<div style="border:1px solid #bbb9b9; border-radius:5px;">
    <div class="form-border row" style="padding-left:50px; padding-top:30px;">
        <div class="col-sm-8">
            <fieldset disabled>
                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-4">
                            <label asp-for="Musician.Name"></label>
                        </div>
                        <div class="col-sm-8">
                            <input asp-for="Musician.Name" class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-4">
                            <label asp-for="Musician.Genre"></label>
                        </div>
                        <div class="col-sm-8">
                            <input asp-for="Musician.Genre" class="form-control" />
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-4">
                            <label asp-for="Musician.Country"></label>
                        </div>
                        <div class="col-sm-8">
                            <input asp-for="Musician.Country" class="form-control" />
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-4">
                            <label asp-for="Musician.Region"></label>
                        </div>
                        <div class="col-sm-8">
                            <input asp-for="Musician.Region" class="form-control" />
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-4">
                            <label asp-for="Musician.Town"></label>
                        </div>
                        <div class="col-sm-8">
                            <input asp-for="Musician.Town" class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-4">
                            <label asp-for="Musician.Description"></label>
                        </div>
                        <div class="col-sm-8">
                            <textarea style="height:150px;" asp-for="Musician.Description" class="form-control"></textarea>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-4">
                            <label asp-for="Musician.Biography"></label>
                        </div>
                        <div class="col-sm-8">
                            <input asp-for="Musician.Biography" class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-4">
                            <label asp-for="Musician.First_name_manager"></label>
                        </div>
                        <div class="col-sm-8">
                            <input asp-for="Musician.First_name_manager" class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-4">
                            <label asp-for="Musician.Last_name_manager"></label>
                        </div>
                        <div class="col-sm-8">
                            <input asp-for="Musician.Last_name_manager" class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-4">
                            <label asp-for="Musician.Manager_contact"></label>
                        </div>
                        <div class="col-sm-8">
                            <input asp-for="Musician.Manager_contact" class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-4">
                            <label asp-for="Musician.Creation_date"></label>
                        </div>
                        <div class="col-sm-8">
                            <input asp-for="Musician.Creation_date" class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-4">
                            <label asp-for="Musician.Merch"></label>
                        </div>
                        <div class="col-sm-8">
                            <input asp-for="Musician.Merch" class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-4">
                            <label asp-for="Musician.Discography"></label>
                        </div>
                        <div class="col-sm-8">
                            <input asp-for="Musician.Discography" class="form-control" />
                        </div>
                    </div>
                </div>
            </fieldset>
        </div>
        <div class="col-sm-3 col-sm-offset-1">
            <img src="@Model.Musician.Image" width="100%" style="border-radius:5px; border:1px solid #bbb9b9;" />
        </div>
        <br />
        <div class="form-group row col-sm-12">
            <a asp-page="Edit" asp-route-id="@Model.Musician.Id" class="btn btn-primary btn-sm">Edit</a>
            <a asp-page="MusicianList" class="btn btn-success btn-sm">Back to list</a>
        </div>
    </div>
</div>