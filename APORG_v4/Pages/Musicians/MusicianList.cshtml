@page "{id:int?}/{handler?}"
@model MusicianListModel
@using APORG_v4.Utility

@{
}
<br />
<h2>Musician List Page</h2>
<br />

@if (Model.Message != null)
{
    <div class="alert alert-info alert-dismissable" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="close">
            <span aria-hidden="true">&times;</span>
        </button>
        @Model.Message
    </div>

}
@if (User.IsInRole(SD.AdminEndUser) || User.IsInRole(SD.CustomerEndUser))
{
    <a asp-page="Create" class="btn btn-primary">Create New Musician</a>
}
@if (Model.Musicians.Count() > 0)
{
    
    <form method="post">
        <div>
            <br />
            <table class="table table-condensed table-hover">
                <tr>
                    <th>
                        @Html.DisplayNameFor(m => m.Musicians.FirstOrDefault().Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.Musicians.FirstOrDefault().Genre)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.Musicians.FirstOrDefault().Country)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.Musicians.FirstOrDefault().Region)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.Musicians.FirstOrDefault().Town)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.Musicians.FirstOrDefault().Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.Musicians.FirstOrDefault().Biography)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.Musicians.FirstOrDefault().First_name_manager)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.Musicians.FirstOrDefault().Last_name_manager)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.Musicians.FirstOrDefault().Manager_contact)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.Musicians.FirstOrDefault().Creation_date)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.Musicians.FirstOrDefault().Merch)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.Musicians.FirstOrDefault().Discography)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.Musicians.FirstOrDefault().Image)
                    </th>
                    <th></th>

                </tr>
                @foreach (var item in Model.Musicians)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(m => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.Genre)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.Country)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.Region)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.Town)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.Biography)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.First_name_manager)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.Last_name_manager)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.Manager_contact)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.Creation_date)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.Merch)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.Discography)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.Image)
                    </td>
                    <td>
                        @Html.Partial("_TableButtonsPartial", new Model.IndividualButtonPartial { Id = item.Id })
                    </td>
                </tr>
                }
            </table>
        </div>
    </form>
}
else
{
    <p>No Musicians found</p>
}