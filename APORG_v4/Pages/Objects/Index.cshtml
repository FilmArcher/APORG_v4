@page
@model IndexModel
@{
    ViewData["Title"] = "Index";
}

<h2>Object Page</h2>
<form method="get" asp-page="Index">
    <div style="height:60px;">
        <div class="col-sm-12">
            <div class="row">
                <div class="col-sm-12 text-right">
                    <label class="radio-inline">
                        @Html.RadioButton("option", "name") Name
                    </label>
                    <label class="radio-inline">
                        @Html.RadioButton("option", "country") Country
                    </label>
                    <label class="radio-inline">
                        @Html.RadioButton("option", "region") Region
                    </label>
                    <label class="radio-inline">
                        @Html.RadioButton("option", "town") Town
                    </label>
                </div>
            </div>
            <div class="row">
                <div class="pull-right">
                    <button type="submit" name="submit" value="Search" class="btn btn-primary">
                        <span class="glyphicon glyphicon-search"></span> Search
                    </button>
                </div>
                <div class="pull-right">
                    @Html.Editor("search", new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
        </div>
    </div>
    <hr />

    <h3 style="padding-left:50px; color:#000000;">Objects</h3>
    @foreach (var _object in Model.IndexVM.Object)
    {
        <div class="row">
            <div class="col-sm-12">
                @* Partial View *@
                @Html.Partial("_ThumbnailObjectPartial", Model.IndexVM.Object.Where(u => u.Id.Equals(_object.Id)))
            </div>
        </div>
    }
</form>